    try {
      getLocationBtn.disabled = true;
      getLocationBtn.innerHTML = '<i data-lucide="loader" class="w-4 h-4 mr-2 inline animate-spin"></i>–û–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ...';
      
