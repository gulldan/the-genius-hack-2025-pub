                <div class="absolute w-8 h-8 border-2 border-emerald-300 rounded-full" style="left: 50%; top: 50%; transform: translate(-50%, -50%)"></div>
                <div class="absolute w-12 h-12 border-2 border-emerald-200 rounded-full" style="left: 50%; top: 50%; transform: translate(-50%, -50%)"></div>
              </div>
              <!-- User position -->
              <div class="absolute w-3 h-3 ${result.valid ? 'bg-blue-500' : 'bg-red-500'} rounded-full" 
                   style="left: ${50 + Math.min(Math.max((result.distance / 200) * 30, -40), 40)}%; top: 50%; transform: translate(-50%, -50%)">
              </div>
